<%= render "shared/second-header"%>

  <div class="session-view-Description">
    <h2>会員の方はこちらからログインしてください</h2>
  </div>


<div class="session-view-all">
  <div class="session-view-block">
    <h2 class="session-view-login">情報を入力してください</h2>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

      <div class="session-field">
        <%= f.label :メールアドレス %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </div>

      <div class="session-field">
        <%= f.label :パスワード %><br />
        <%= f.password_field :password, autocomplete: "current-password" %>
      </div>

      <div class="actions">
        <%= f.submit "ログイン" , class: "login-session-btn"%>
      </div>
    <% end %>

    
  </div>
</div>

<%= render  "fixes/footer" %>
