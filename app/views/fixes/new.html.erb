<%= render "shared/second-header"%>

  <h2 class="retouch-fix-title">新規リクエスト情報の入力</h2>
  <div class="retouch-fix-main">
    
    <%= form_with model: @fixes, local: true do |f| %>

     <div class="errors-messages-new">
    <%= render partial: 'shared/error_messages', locals: { model: f.object } %>
      </div>


    <div class="img-upload">
      <div class="weight-bold-text">
        添削して欲しい画像<span class="indispensable"> 必須 </span>
        <div class="img-file">
        （JPEG PNG形式のみ）
        </div>
      </div>
        <div class="click-upload">
          <%= f.file_field :image, id:"retouch-fix-image"%>
        </div>
    </div>

    <div class="new-request">
      <div class="weight-bold-text">
        タイトル
        <span class="indispensable">必須</span>
      </div>
      <%= f.text_area :title, class:"request-text", id:"request-name", placeholder:"タイトル（必須 26文字まで)", maxlength:"26" %>
      <div class="request-explain">
        <div class="weight-bold-text">
          修正コメント
          <span class="indispensable">必須</span>
        </div>
        <%= f.text_area :comment, class:"request-comment", id:"request-info", placeholder:"リクエスト詳細（必須 1,000文字まで）"  ,maxlength:"1000" %>
      </div>
    </div>

    <div class="request-genre-details">
      <div class="form">
        <div class="weight-bold-text">
          ジャンル
          <span class="indispensable">必須</span>
        </div>
        <%= f.collection_select(:genre_id, Genre.all, :id, :name, {}, {class:"select-box", id:"request-category"}) %>
      </div>
    </div>

    <div class="request-btn-contents">
      <%= f.submit "リクエスト作成" ,class:"request-btn" %>
      <%# <div class="back-btn-position">
      <%=link_to 'Top', root_path, class:"back-btn" %>
      <%# </div>  %>
    </div>
  <% end %>
  </div>

  <%= render partial: "footer" %>